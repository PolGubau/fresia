---
import Title from "./title.astro";
import { Image } from "astro:assets";
import copies from "~/locales/ca.json" assert { type: "json" };

import image1 from "../../assets/images/arbre_2.webp";
import image2 from "../../assets/images/conjunt_3.webp";
import image3 from "../../assets/images/arbre_1.webp";
import image4 from "../../assets/images/conjunt_2.webp";
import image5 from "../../assets/images/arbre_3.webp";
import image6 from "../../assets/images/espelma_1.webp";

const fotos = [
  {
    src: image1,
    height: 570,
    width: 600,
    alt: copies["hero.photo.alt.1"],
  },
  {
    src: image2,
    alt: copies["hero.photo.alt.2"],
    height: 700,
    width: 600,
  },
  {
    src: image3,
    alt: copies["hero.photo.alt.3"],
    height: 750,
    width: 300,
  },
  {
    src: image4,
    alt: copies["hero.photo.alt.4"],
    height: 850,
    width: 600,
  },
  {
    src: image5,
    alt: copies["hero.photo.alt.5"],
    height: 600,
    width: 300,
  },

  {
    src: image6,
    alt: copies["hero.photo.alt.6"],
    height: 450,
    width: 600,
  },
];
---

<section class="min-h-screen flex flex-col gap-20 overflow-x-hidden">
  <header class="p-8 pt-[18vh] flex flex-col gap-8">
    <Title />
    <p class="xl:text-xl">{copies["hero.subtitle"]}</p>
  </header>

  <ul class="flex gap-4 items-center w-screen justify-center overflow-hidden">
    {
      fotos.map((foto) => (
        <li>
          <Image
            src={foto.src}
            alt={foto.alt}
            width={foto.width}
            style={`height: ${foto.height}px; width: ${foto.width}px;`}
            height={foto.height}
            data-index={fotos.indexOf(foto)}
            class="w-full bg-image h-full min-w-60 md:min-w-[500px] bg-neutral-200 object-cover object-center flex-1"
          />
        </li>
      ))
    }
  </ul>
</section>
