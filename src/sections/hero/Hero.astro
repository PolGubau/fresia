---
import Title from "./title.astro";

const fotos = [
  {
    src: "https://picsum.photos/400/700",
    alt: "Foto 1",
  },
  {
    src: "https://picsum.photos/450/650",
    alt: "Foto 2",
  },
  {
    src: "https://picsum.photos/510/470",
    alt: "Foto 3",
  },
  {
    src: "https://picsum.photos/600/570",
    alt: "Foto 3",
  },
  {
    src: "https://picsum.photos/400/700",
    alt: "Foto 1",
  },
  {
    src: "https://picsum.photos/450/650",
    alt: "Foto 2",
  },
  {
    src: "https://picsum.photos/510/570",
    alt: "Foto 3",
  },
  {
    src: "https://picsum.photos/600/470",
    alt: "Foto 3",
  },
];
---

<section class="min-h-screen flex flex-col gap-20 overflow-x-hidden">
  <header class="p-8 pt-[18vh] flex flex-col gap-8">
    <Title />
    <p class="xl:text-xl">No se qué posar aquí, yu després em dius</p>
  </header>

  <ul class="flex gap-4 items-center w-screen justify-center overflow-hidden">
    {
      fotos.map((foto) => (
        <li>
          <img
            src={foto.src}
            width={600}
            alt={foto.alt}
            data-index={fotos.indexOf(foto)}
            class="w-full bg-image h-full min-w-60 md:min-w-[500px] bg-neutral-200 object-cover object-center flex-1"
          />
        </li>
      ))
    }
  </ul>
</section>
