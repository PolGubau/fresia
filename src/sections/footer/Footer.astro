---
import { Image } from "astro:assets";
import footerImage from "../../assets/images/footer.webp";
import copies from "~/locales/ca.json" assert { type: "json" };
---

<section class="">
  <div class="relative w-screen h-screen overflow-hidden">
    <Image
      width={1200}
      height={800}
      src={footerImage}
      alt="Aparador de flores FrÃ¨sia"
      class="w-full h-screen object-cover object-top"
    />

    <nav
      class="w-full flex max-md:flex-col justify-between gap-4 absolute bottom-0 left-0 p-4 md:p-8 text-white"
    >
      <div
        class="flex gap-2 items-center p-2 w-fit bg-foreground/30 rounded-full backdrop-blur-md px-2"
      >
        <a
          href="https://www.instagram.com/floristeria_fresia/"
          target="_blank"
          rel="noopener noreferrer"
        >
          {copies["footer.handle"]}
        </a>
        <a href="tel:+654321987" target="_blank" rel="noopener noreferrer">
          {copies["footer.phone"]}
        </a>
      </div>

      <div
        class="flex gap-2 items-center p-2 w-fit bg-foreground/30 rounded-full backdrop-blur-md px-2"
      >
        <a
          target="_blank"
          rel="noopener noreferrer"
          href="https://maps.app.goo.gl/YnL3sy1KEZQwKZWHA"
        >
          {copies["footer.address"]}
        </a>
      </div>
    </nav>
  </div>
</section>
