---
import Product, { type Product as ProductType } from "./Product.astro";
import product1 from "../../assets/images/galet.webp";
import product2 from "../../assets/images/arbre_1.webp";
import copies from "src/locales/ca.json";

const productos: ProductType[] = [
  {
    nombre: copies["products.0.name"],
    description: copies["products.0.desc"],
    image: product1,
    ctaLabel: copies["products.0.cta"],
    ctaLink: copies["products.0.link"],
  },
  {
    nombre: copies["products.1.name"],
    description: copies["products.1.desc"],
    image: product2,
    ctaLabel: copies["products.1.cta"],
    ctaLink: copies["products.1.link"],
  },
];
---

<ul class="flex flex-col gap-36 items-center py-20 px-4">
  {
    productos.map((producto, index) => (
      <Product producto={producto} index={index} inverted={index % 2 === 1} />
    ))
  }
</ul>
