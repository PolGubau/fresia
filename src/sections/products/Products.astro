---
import Product from "./Product.astro";

const productos = [
  {
    nombre: "Ramo Clásico",
    description: "Un ramo de flores clásicas para cualquier ocasión.",
    image: "/src/assets/images/arbre_2.webp",
  },
  {
    nombre: "Ramo Moderno de Navidad",
    description: "Diseño moderno con flores exóticas.",
    image: "/src/assets/images/arbre_2.webp",
  },
];
---

<ul class="flex flex-col gap-36 items-center py-20 px-8">
  {
    productos.map((producto, index) => (
      <Product producto={producto} index={index} inverted={index % 2 === 1} />
    ))
  }
</ul>
